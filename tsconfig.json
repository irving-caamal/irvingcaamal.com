{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~/app/*": ["src/app/*"],
      "~/pages/*": ["src/pages/*"],
      "~/widgets/*": ["src/widgets/*"],
      "~/features/*": ["src/features/*"],
      "~/entities/*": ["src/entities/*"],
      "~/shared/*": ["src/shared/*"]
    }
  }
}
